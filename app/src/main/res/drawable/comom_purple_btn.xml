<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <corners
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="2dp"
        android:radius="8dp"
        android:topLeftRadius="2dp"
        android:topRightRadius="2dp" />
    <!-- 设置圆角半径 -->


    <!-- 渐变 -->
    <gradient
        android:endColor="#6f029b"
        android:startColor="#9244bc"
        android:type="linear"
        android:angle="90"
        android:useLevel="true" />

    <!-- 描边 -->
    <stroke
        android:width="1px"
        android:color="#52006b" />

    <size
        android:height="40dp"
        android:width="40dp" />
 <!-- 宽度和高度 -->

</shape>